{
    "name": "shoperti/payme",
    "description": "A multi-gateway payment platform for PHP",
    "license": "MIT",
    "keywords": [
        "payme",
        "payments",
        "gateway"
    ],
    "authors": [
        {
            "name": "Shoperti",
            "homepage": "https://github.com/shoperti/payme"
        }
    ],
    "require": {
        "php": ">=7.0.0",
        "guzzlehttp/guzzle": "~6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.1"
    },
    "autoload": {
        "psr-4": {
            "Shoperti\\PayMe\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Shoperti\\Tests\\PayMe\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "4.x-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
